{
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "âœ¨ Features"
          },
          {
            "type": "fix",
            "section": "ğŸ› Bug Fixes"
          },
          {
            "type": "chore",
            "section": "ğŸ« Chores"
          },
          {
            "type": "docs",
            "section": "ğŸ“ Documentation"
          },
          {
            "type": "style",
            "section": "ğŸ’„ Styles"
          },
          {
            "type": "refactor",
            "section": "â™» Code Refactoring"
          },
          {
            "type": "perf",
            "section": "âš¡ Performance Improvements"
          },
          {
            "type": "test",
            "section": "âœ… Tests"
          },
          {
            "type": "revert",
            "section": "âª Reverts"
          },
          {
            "type": "build",
            "section": "ğŸ‘·â€ Build System"
          },
          {
            "type": "ci",
            "section": "ğŸ”§ Continuous Integration"
          },
          {
            "type": "config",
            "section": "ğŸ”¨ CONFIG"
          }
        ]
      },
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true,
      "strictSemVer": true
    }
  },
  "git": {
    "commitMessage": "chore: Release v${version}"
  },
  "github": {
    "release": true,
    "draft": false
  },
  "hooks": {
    "before:init": ["npm run lint", "npm run typecheck"],
    "after:bump": "npm run build",
    "after:release": "echo Successfully released ${name} v${version} to ${repo.repository}."
  }
}
